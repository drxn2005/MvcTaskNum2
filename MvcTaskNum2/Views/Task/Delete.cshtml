@model MvcTaskNum2.Models.TodoTask

<div class="container py-4">
    <h2>Delete Todo Item</h2>
    <p class="text-muted">Are you sure you want to delete this item?</p>

    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Deadline</dt>
        <dd class="col-sm-10">@Model.DeadLine.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">File</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <a href="@Model.FilePath" target="_blank">Download</a>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-light ms-2">Cancel</a>
    </form>
</div>
