@model IEnumerable<TodoTask>
@{
    var userName = ViewBag.UserName as string;
}
<h1 class="mb-1">Welcome @(string.IsNullOrWhiteSpace(userName) ? "" : userName)</h1>

<div class="container py-4">
    <p class="text-muted">Your Todo List is ready</p>

    <a asp-controller="Task" asp-action="Create" class="btn btn-primary mb-3">Create</a>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Deadline</th>
                <th>File</th>
                <th style="width:160px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.DeadLine.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.FilePath))
                            {
                                <a href="@Url.Content(item.FilePath)" target="_blank">Download</a>
                            }
                        </td>
                        <td>
                            <a asp-controller="Task" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-outline-primary btn-sm">Edit</a>
                            <a asp-controller="Task" asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm ms-1">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No items yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
